<div id="<%= dom_id post %>">
  <p class="my-5">
    <strong class="text-xl block font-medium mb-1"><%= post.title %></strong>
    <%= post.body %>
  </p>
  
  <p class="my-5">
    <strong class="block font-medium mb-1">Comments:</strong>
    <%- post.comments.each do |comment| %>
      <p class="m-5 p-2 bg-blue-100 rounded-lg">
        <%= comment.body %>
      </p>
    <% end %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this post", post, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this post', edit_post_path(post), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
